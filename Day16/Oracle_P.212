#P.212 
#1.
SELECT DEPTNO,TRUNC(AVG(SAL)) AS AVG_SAL , MAX(SAL) AS MAX_SAL , MIN(SAL) AS MIN_SAL

,COUNT(EMPNO) AS CNT FROM EMP

GROUP BY DEPTNO;
#2.
SELECT JOB, COUNT(*) FROM EMP GROUP BY JOB HAVING(COUNT(*)>=3);
#3.
SELECT TO_CHAR(HIREDATE,'YYYY') AS HIRE_YEAR, DEPTNO, COUNT(*) FROM EMP GROUP BY TO_CHAR(HIREDATE, 'YYYY'), DEPTNO ORDER BY HIRE_YEAR;
#4.
SELECT NVL2(COMM, 'O', 'X'), COUNT(*) FROM EMP GROUP BY NVL2(COMM, 'O', 'X');

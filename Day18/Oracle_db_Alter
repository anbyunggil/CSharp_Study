#테이블 구조 변경 ALTER
CREATE TABLE EMP_ALTER
AS SELECT * FROM EMP;

SELECT * FROM EMP_ALTER;
#컬럼 추가
ALTER TABLE EMP_ALTER
 ADD HP VARCHAR2(20);
#TEL 컬럼 추가 VARCHAR2(20)
ALTER TABLE EMP_ALTER
 ADD TEL VARCHAR(20);
 #TEL 컬럼 삭제
 ALTER TABLE EMP_ALTER
  DROP COLUMN TEL;
  
  DESC EMP_ALTER;
  COMMIT;
  
  #TEL COLUMN 추가
  ALTER TABLE EMP_ALTER
   ADD TEL VARCHAR2(20);

   #TEL COLUMN 삭제
   ALTER TABLE EMP_ALTER
   DROP COLUMN TEL;
   DESC EMP_ALTER;

#변경 HP --> TEL
ALTER TABLE EMP_ALTER
 RENAME COLUMN HP TO TEL;
SELECT * FROM EMP_ALTER;
COMMIT;

#컬럼의 이름이 아닌 타입을 바꾸기
#EMPNO : NUMBER (4) --> NUMBER (5)
DESC EMP_ALTER;
ALTER TABLE EMP_ALTER
 MODIFY EMPNO NUMBER (5);
DESC EMP_ALTER;
#문제. ENAME : VARCHAR2(10) --> VARCHAR2(13)
ALTER TABLE EMP_ALTER
MODIFY ENAME VARCHAR2(13);
DESC EMP_ALTER;

#TEL --> PHONENUMBER 바꾸기
ALTER  TABLE EMP_ALTER
RENAME COLUMN TEL TO PHONENUMBER;
DESC EMP_ALTER;

#테이블의 이름을 변경
#EMP_ALTER --> EMP_RENAME
RENAME EMP_ALTER TO EMP_RENAME;
COMMIT;

#테이블의 데이터를 강제로 삭제하는 명령어
TRUNCATE TABLE EMP_RENAME;
SELECT * FROM EMP_RENAME;
COMMIT;

#테이블 삭제
DROP TABLE EMP_RENAME;

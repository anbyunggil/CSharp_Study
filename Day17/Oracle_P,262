#P.262 연습문제
#1.
SELECT JOB, D.EMPNO, ENAME, SAL, D.DEPTNO, DNAME
FROM EMP E, DEPT D WHERE E.DEPTNO = D.DEPTNO 
AND JOB = 'SALESMAN' ORDER BY SAL, EMPNO;
#2.
SELECT EMPNO, ENAME, DNAME, HIREDATE, LOC, SAL, GRADE
FROM EMP E, DEPT D, SALGRADE S
WHERE E.DEPTNO = D. DEPTNO AND E.SAL BETWEEN S.LOSAL AND S.HISAL
AND SAL > (SELECT AVG(SAL) FROM EMP) ORDER BY SAL DESC, EMPNO;
//SQl-99
SELECT E.EMPNO, E.ENAME, D.DNAME, E.HIREDATE, LOC, E.SAL, S.GRADE
FROM EMP E JOIN DEPT D ON(E.DEPTNO = D.DEPTNO)
JOIN SALGRADE S ON (E.SAL BETWEEN S.LOSAL AND S.HISAL)
WHERE E.SAL > (SELECT AVG(SAL) FROM EMP)
ORDER BY SAL DESC, EMPNO;
